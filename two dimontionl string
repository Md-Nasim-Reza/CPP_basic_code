int main(){
    int i,j,n,count;
    char str[100][100];
    scanf("%d", &n);
    for(i=0; i<n; i++)
        scanf("%s", str[i]);
    for(i=0; i<n; i++){
            count=0;
        for(j=0; j<strlen(str[i]); j++){
            if(str[i][j]=='a')
                count++;
        }
        printf("%d -> %d\n", i+1, count);
    }
    return 0;
}
