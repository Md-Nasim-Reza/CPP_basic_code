////A. Consecutive Sum codeforces

#include<bits/stdc++.h>
#include<math.h>
#include<string>
#define ll long long
#define vl vector<ll>
#define vi vector<int>
#define pb push_back
#define nl endl
#define yes "YES"
#define no "NO"
#define mod 1000000007
#define mod1 998244353
#define ull unsigned long long
using namespace std;

void solve(){
    ll n,i,j,k,x,ans=0;
    cin>>n>>k;
    vector<priority_queue<ll> >ar(k);
    for(i=0; i<n; i++){
        cin>>x;
        ar[i%k].push(x);
    }
    for(auto it:ar){
        ans+=it.top();
    }
    cout<<ans<<nl;
}

int main(){
    ll i,tc,n,Pow,m,ans;
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cin>>tc;
    while(tc--){
        solve();
    }
return 0;
}
